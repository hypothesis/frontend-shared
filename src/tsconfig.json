{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "lib": ["es2018", "dom"],
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "module": "commonjs",
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "../lib",

    "strict": true,
    "target": "ES2020"
  },
  "include": ["**/*.js"],
  "exclude": [
    // Tests are not checked.
    "**/test/**/*.js",
    "karma.config.js"
  ]
}
