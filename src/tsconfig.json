{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "lib": ["es2018", "dom"],
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "module": "es2022",
    "moduleResolution": "bundler",
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "../lib",

    "strict": true,
    "target": "ES2020",
    // Prevent automatic inclusion of global variables defined in `@types/<name>` packages.
    // This prevents eg. Node globals from `@types/node` being included when writing
    // code for the browser.
    "types": []
  },
  "include": ["**/*.ts", "**/*.js", "**/*.tsx", "types/*.d.ts"],
  "exclude": [
    // Tests are not checked.
    "**/test/**/*.js"
  ]
}
